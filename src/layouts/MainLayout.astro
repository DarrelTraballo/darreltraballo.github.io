---
import Nav from "../components/Nav.astro"
import Footer from "../components/Footer.astro"
import Constellations from "../components/background-effects/Constellations.jsx"
import DelaunayBackground from "../components/background-effects/DelaunayBackground.jsx"
import PageIcon from "../assets/images/icons/mdi--gamepad-variant.svg"

interface Props {
    title: string
}

const { title } = Astro.props

const isLocal = import.meta.env.MODE === "development"
const pageTitle = isLocal ? "[DEV] " + title : title
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href={PageIcon.src} />
        <meta name="generator" content={Astro.generator} />
        <title>{pageTitle}</title>
    </head>
    <body
        class="bg-gradient-to-b from-gradient-start to-gradient-end bg-fixed text-primary-font min-h-screen flex flex-col">
        <!-- <FallingBalls client:load /> -->
        <div class="fixed inset-0 -z-10 h-full">
            <DelaunayBackground client:load />
        </div>
        <div class="flex flex-col flex-grow">
            <Nav />
            <main class="container max-w-7xl mx-auto flex-grow px-4 sm:px-6 lg:px-20 py-8">
                <slot />
            </main>
        </div>
        <Footer />
        <style>
            body {
                font-family: "Roboto", sans-serif;
                min-height: 100vh;
            }
        </style>
    </body>
</html>
